<Window x:Class="PluralSight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PluralSightProcessor.Domain;assembly=PluralSightProcessor"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        <TreeView ItemsSource="{Binding}">
            <TreeView.Resources>
                <HierarchicalDataTemplate 
                    DataType="{x:Type local:Library}"
                    ItemsSource="{Binding Children}"
                    >
                    <StackPanel Orientation="Horizontal">
                        <!-- These elements are bound to a ViewModel object. -->
                        <CheckBox
                          Focusable="False" 
                          IsChecked= "{Binding IsSelected}"
                          VerticalAlignment="Center"
                          />
                        <TextBlock Text="{Binding Name, Mode=OneTime}" Margin="2,0"/>
                    </StackPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate 
                    DataType="{x:Type local:Course}"
                    ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <!-- These elements are bound to a ViewModel object. -->
                        <CheckBox
                          Focusable="False" 
                          IsChecked="{Binding IsSelected}"
                          VerticalAlignment="Center"
                          />
                        <ContentPresenter 
                          Content="{Binding Name, Mode=OneTime}" 
                          Margin="2,0"
                          />
                    </StackPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate 
                    DataType="{x:Type local:Chapter}"
                    ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <!-- These elements are bound to a ViewModel object. -->
                        <CheckBox
                          Focusable="False" 
                          IsChecked="{Binding IsSelected}" 
                          VerticalAlignment="Center"
                          />
                        <ContentPresenter 
                          Content="{Binding Name, Mode=OneTime}" 
                          Margin="2,0"
                          />
                    </StackPanel>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate 
                    DataType="{x:Type local:Video}"
                    ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <!-- These elements are bound to a ViewModel object. -->
                        <CheckBox
                          Focusable="False" 
                          IsChecked="{Binding IsSelected}"
                          VerticalAlignment="Center"
                          />
                        <ContentPresenter 
                          Content="{Binding Name, Mode=OneTime}" 
                          Margin="2,0"
                          />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
        
    </Grid>
</Window>
